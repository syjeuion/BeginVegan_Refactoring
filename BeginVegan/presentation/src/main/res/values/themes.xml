<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Beginvegan" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/color_white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textCursorDrawable">@color/color_black</item>

    </style>

    <style name="AlertDialogTheme" parent="MaterialAlertDialog.Material3">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>
    </style>

    <style name="AlertDialogPositiveButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_primary</item>
        <item name="fontFamily">@style/body_1_bold</item>
    </style>

    <style name="AlertDialogNegativeButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_text_02</item>
        <item name="fontFamily">@style/body_1_bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize8Percent" parent="">
        <item name="cornerSize">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize12Percent" parent="">
        <item name="cornerSize">12dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize20Percent" parent="">
        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="tabProfileTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_body_1</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="CounterTextAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/text_body_2</item>
    </style>

    <style name="textInputEditTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/color_text_32</item>
        <item name="boxStrokeColor">@color/color_primary3</item>
        <item name="android:textCursorDrawable">@color/color_primary3</item>
    </style>

    <style name="CustomVeganTypeChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:backgroundTint">@color/chip_state_color_background</item>
        <item name="chipStrokeColor">@color/color_primary3</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/chip_state_color_text</item>
        <item name="rippleColor">@color/color_primary2</item>
    </style>


    <style name="MainBottomNavigationView">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
        <item name="itemIconTint">@drawable/selector_bnv_color</item>
        <item name="itemTextColor">@drawable/selector_bnv_color</item>
        <item name="itemPaddingBottom">10dp</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="itemRippleColor">@android:color/transparent</item>

    </style>

    <style name="MainBottomNavigationView.TextActive">
        <item name="android:textSize">9sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>

    <style name="MainBottomNavigationView.ActiveIndicator" parent="">
        <item name="android:color">@android:color/transparent</item>
    </style>
    <!--    OnBoarding-->
    <style name="Widget.BeginVegan.TextInputLayout.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="errorTextColor">@color/color_primary</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeColor">@drawable/onboarding_color</item>

    </style>

    <style name="CustomHintTextAppearance">
        <item name="android:fontFamily">@style/body_2_regular</item>
        <item name="android:textColor">@color/color_text_03</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>


    <style name="Widget.BeginVegan.Dropdown.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintEnabled">false</item>
        <item name="android:background">@color/color_white</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeColor">@drawable/onboarding_color</item>
    </style>


    <style name="textSelect">
        <item name="backgroundTint">@color/color_primary</item>
    </style>

    <style name="SearchOutlineBox">
        <item name="colorControlActivated">@color/color_text_01</item>
    </style>

    <style name="Widget.BeginVegan.TextInputEditText.OutlinedBox" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="hintTextAppearance">@style/CustomHintTextAppearance</item>
    </style>

    <style name="RoundedDropDown">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="color">@color/color_gray_01</item>
    </style>

    <!-- toggle switch -->
    <style name="SwitchTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/color_primary</item>
        <item name="colorSwitchThumbNormal">@color/color_background</item>
    </style>

    <!--    Home -->
    <style name="MainHomeTextStyle" parent="body_1_bold">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="AppSearchView" parent="Widget.Material3.SearchView">

    </style>

    <style name="AppSearchBar" parent="ShapeAppearanceOverlay.Material3.SearchBar"></style>

    <style name="AppSearchBar.TextAppearance" parent="TextAppearance.Material3.SearchBar">
        <item name="hintTextColor">@color/color_gray_02</item>
    </style>

    <style name="SearchViewToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:iconTint">@color/color_white</item>
        <item name="navigationIconTint">@color/color_white</item>
    </style>

    <style name="RestaurantNavigationButton">
        <item name="android:drawablePadding">@dimen/margin_4</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/color_text_02</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color_transparent</item>
    </style>

    <style name="ModifyTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="strokeColor">@color/color_black</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <item name="boxStrokeColor">@drawable/onboarding_color</item>
    </style>

    <style name="ModifyTextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="android:padding">12dp</item>
    </style>

    <style name="CustomSearchViewTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@style/body_1_regular</item>
        <item name="hintTextColor">@color/color_gray_02</item>
        <item name="android:textColor">@color/color_text_01</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SearchViewLayout">
        <item name="cardCornerRadius">@dimen/radius_8</item>
        <item name="android:padding">@dimen/global_zero</item>
        <item name="android:paddingTop">@dimen/global_zero</item>
        <item name="android:paddingBottom">@dimen/global_zero</item>
        <item name="android:paddingStart">@dimen/global_zero</item>
        <item name="android:paddingEnd">@dimen/global_zero</item>
        <item name="android:minWidth">@dimen/global_zero</item>
        <item name="minHeight">@dimen/global_zero</item>
    </style>

    <style name="FloatingButtonShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>