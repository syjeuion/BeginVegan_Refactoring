<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_width_big"
    android:layout_height="wrap_content"
    android:background="@color/color_background"
    app:cardCornerRadius="@dimen/radius_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_height"
        android:paddingVertical="@dimen/margin_20">

        <TextView
            android:id="@+id/tv_vegan_type"
            style="@style/body_2_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_4"
            android:background="@drawable/shape_notification_badge"
            android:backgroundTint="@color/color_primary"
            android:paddingHorizontal="@dimen/margin_12"
            android:paddingVertical="@dimen/margin_4"
            android:text="@string/vegan_type_vegan"
            android:textColor="@color/color_text_04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ToggleButton
            android:id="@+id/tb_interest"
            android:layout_width="@dimen/item_32"
            android:layout_height="@dimen/item_32"
            android:layout_marginEnd="@dimen/margin_20"
            android:background="@drawable/selector_ic_heart"
            android:backgroundTint="@color/color_primary"
            android:textColor="@color/color_transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_recipe_title"
            style="@style/body_1_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_12"
            android:gravity="start"
            android:textColor="@color/color_text_01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_vegan_type" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_8"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@color/color_gray_00"
            app:layout_constraintTop_toBottomOf="@id/tv_recipe_title" />

        <ScrollView
            android:id="@+id/sv_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_0"
            android:paddingHorizontal="@dimen/margin_20"
            android:paddingTop="@dimen/margin_4"
            android:paddingBottom="@dimen/margin_20"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@id/btn_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_divider">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_recipe_ingredients_title"
                    style="@style/body_2_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24"
                    android:text="@string/tips_recipe_detail_ingredient"
                    android:textColor="@color/color_primary_variant_01" />

                <LinearLayout
                    android:id="@+id/ll_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/tv_recipe_process_title"
                    style="@style/body_2_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:text="@string/tips_recipe_detail_process"
                    android:textColor="@color/color_primary_variant_01" />

                <LinearLayout
                    android:id="@+id/ll_process"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:orientation="vertical" />
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            style="@style/body_1_bold"
            android:layout_width="@dimen/dialog_width"
            android:layout_height="@dimen/item_48"
            android:layout_marginHorizontal="@dimen/margin_20"
            android:text="@string/btn_close"
            android:textColor="@color/color_text_04"
            app:backgroundTint="@color/color_primary"
            app:cornerRadius="@dimen/radius_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_scroll_view" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>